<table border>
        <tr>
        <% @users.each do |user|%>
        <td> <%=link_to user.name ,user_path(user)%> </td>
        

        <% if can? :Edit, user%>
        <td> <%= button_to 'Edit', edit_user_path(user), method: 'get' %> </td>
        <% end %>

        <% if can? :Show, user%>

        <td> <%= button_to 'Show', user_path(user), method: 'get' %> </td>
        <% end %>
        <% if can? :Remove, @user%>
        <td> <%= button_to 'Remove', user_path(user), method: 'delete', data: {turbo_delete: :delete } %> </td> 
        <% end %>

        </tr>
<% end %>
</table>
  




