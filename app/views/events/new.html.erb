<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
<div class="card-header bg-info">
<h2 class="card-title text-center">Create An Event</h2>
</div>
<div class="card-body">

  <%=form_with model: @event, url: eventsposts_path do |f|%>
  <div class="title">
  <%= f.label :title %>
    <%= f.text_field :title ,class: "form-control form-control-lg" %>
    <div>
      <br/>
      <div class="StartDate">
      <%= f.label :Start_Date %>
        <%= f.date_field :StartDate,class: "form-control form-control-lg"%>
        </div>
          <br/>
          <div class="EndDate">
          <%= f.label :End_Date %>
        <%= f.date_field :EndDate, class: "form-control form-control-lg"%>
        </div>
          <%= f.submit "Submit",class:"btn btn-success btn-lg mb-1" %> 
          <% end %>
        </div>
      </div>
    </div>
  </div>

